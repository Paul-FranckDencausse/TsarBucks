{% extends 'base.html.twig' %}

{% block title %}Détails du Menu{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Détails du Menu</h1>

    <table class="table table-bordered shadow-sm">
        <tbody>
            <tr>
                <th scope="row">ID</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
   <tr>
    <th scope="row">Image</th>
    <td>
        {% if menu.imageFilename %}
            <img src="{{ asset('uploads/' ~ menu.imageFilename) }}" alt="Image du menu {{ menu.name }}" class="img-thumbnail" style="max-width: 300px;">
        {% else %}
            <p>Aucune image disponible</p>
        {% endif %}
    </td>
</tr>


            <tr>
                <th scope="row">Nom</th>
                <td>{{ menu.name }}</td>
            </tr>
            <tr>
                <th scope="row">Type</th>
                <td>{{ menu.type }}</td>
            </tr>
            <tr>
                <th scope="row">ID de Recette</th>
                <td>{{ menu.recipeId }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gap-3 mt-4">
        <a href="{{ path('app_admin_menu_index') }}" class="btn btn-info btn-lg text-light">Retour à la liste</a>
        <a href="{{ path('app_admin_menu_edit', {'id': menu.id}) }}" class="btn btn-warning btn-lg text-light">Modifier</a>
        {{ include('admin_menu/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
