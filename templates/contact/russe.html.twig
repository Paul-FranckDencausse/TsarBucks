{% extends 'russianBase.html.twig' %}

{% block title %}Контакт - Tsarbucks{% endblock %}

{% block body %}
<section class="py-5 bg-light">
    <div class="container my-5">
        <h1 class="text-center">Свяжитесь с нами</h1>

        {% if form is defined %}
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.email, 'Электронная почта', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.subject, 'Тема', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.subject) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.message, 'Сообщение', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                {{ form_errors(form.message) }}
            </div>

            <button type="submit" class="btn btn-success w-100">Отправить</button>
            {{ form_end(form) }}
        {% else %}
            <p>Спасибо за ваше сообщение! Мы свяжемся с вами в ближайшее время.</p>
        {% endif %}
    </div>
</section>
{% endblock %}
