{% extends 'base.html.twig' %}

{% block title %}Activities index{% endblock %}

{% block body %}
    <h1>Activities index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Association_id</th>
                <th>Media_id</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity in activities %}
            <tr>
                <td>{{ activity.id }}</td>
                <td>{{ activity.associationId }}</td>
                <td>{{ activity.mediaId }}</td>
                <td>{{ activity.type }}</td>
                <td>
                    <a href="{{ path('app_activities_show', {'id': activity.id}) }}">show</a>
                    <a href="{{ path('app_activities_edit', {'id': activity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_activities_new') }}">Create new</a>
{% endblock %}
