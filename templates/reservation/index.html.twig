{% extends 'base.html.twig' %}

{% block title %}Réserver une Table{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Réserver une Table</h1>
    
    <div class="row justify-content-center">
        <div class="col-md-8">
            {{ form_start(reservationForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="mb-3">
                    {{ form_label(reservationForm.date, 'Date de réservation', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(reservationForm.date, {'attr': {'class': 'form-control', 'placeholder': 'Choisissez une date'}}) }}
                    {{ form_errors(reservationForm.date) }}
                </div>

                <div class="mb-3">
                    {{ form_label(reservationForm.time, 'Heure de réservation', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(reservationForm.time, {'attr': {'class': 'form-control', 'placeholder': 'Heure (ex: 19:00)'}}) }}
                    {{ form_errors(reservationForm.time) }}
                </div>

                <div class="mb-3">
                    {{ form_label(reservationForm.numberOfPeople, 'Nombre de personnes', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(reservationForm.numberOfPeople, {'attr': {'class': 'form-control', 'placeholder': 'Nombre de personnes'}}) }}
                    {{ form_errors(reservationForm.numberOfPeople) }}
                </div>

                <div class="mb-3">
                    {{ form_label(reservationForm.comments, 'Commentaires', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(reservationForm.comments, {'attr': {'class': 'form-control', 'placeholder': 'Ajouter des commentaires (facultatif)'}}) }}
                    {{ form_errors(reservationForm.comments) }}
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-4">Réserver</button>
            {{ form_end(reservationForm) }}
        </div>
    </div>
</div>
{% endblock %}
