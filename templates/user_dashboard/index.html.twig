{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Tableau de Bord</h1>

    <div class="row">
        <!-- Informations de l'Utilisateur -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Informations de l'Utilisateur</h5>
                    <p class="card-text"><strong>Nom:</strong> </p>
                    <p class="card-text"><strong>Prénom:</strong> </p>
                    <p class="card-text"><strong>Email:</strong> </p>
                    <p class="card-text"><strong>Genre:</strong></p>
                    <p class="card-text"><strong>Date de Naissance:</strong> </p>
                    <p class="card-text"><strong>Téléphone:</strong> </p>
                    <p class="card-text"><strong>Adresse:</strong> </p>
                    <p class="card-text"><strong>Code Postal:</strong> </p>
                    <p class="card-text"><strong>Ville:</strong></p>
                </div>
            </div>
        </div>

        <!-- Statistiques -->
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Statistiques</h5>
                            <p class="card-text"><strong>Nombre de Connexions:</strong> 10</p>
                            <p class="card-text"><strong>Dernière Connexion:</strong> 2023-10-15 14:30</p>
                            <p class="card-text"><strong>Rôle:</strong> </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Activités Récentes</h5>
                            <p class="card-text">Vous avez modifié votre profil.</p>
                            <p class="card-text">Vous avez ajouté un nouveau commentaire.</p>
                            <p class="card-text">Vous avez aimé une publication.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Liens Utiles -->
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Liens Utiles</h5>
                    <a href="" class="btn btn-primary mb-2">Modifier le Profil</a>
                    <a href="" class="btn btn-secondary mb-2">Changer le Mot de Passe</a>
                    <a href="" class="btn btn-danger mb-2">Déconnexion</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
