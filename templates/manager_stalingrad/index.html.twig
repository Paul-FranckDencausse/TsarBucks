                <td>{{ stalingrad.id }}</td>
                <td>{{ stalingrad.Name }}</td>
                <td>{{ stalingrad.Media }}</td>
                <td>{{ stalingrad.address }}</td>
                <td>{{ stalingrad.phone }}</td>
                <td>{{ stalingrad.openingHours }}</td>
                <td>
                    <a href="{{ path('app_manager_stalingrad_show', {'id': stalingrad.id}) }}">show</a>
