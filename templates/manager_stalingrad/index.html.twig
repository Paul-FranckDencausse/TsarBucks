{% extends 'base.html.twig' %}

{% block title %}Stalingrad index{% endblock %}

{% block body %}
    <h1>Stalingrad index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Media</th>
                <th>Address</th>
                <th>Phone</th>
                <th>OpeningHours</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stalingrad in stalingrads %}
