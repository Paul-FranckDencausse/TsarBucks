{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Réinitialiser votre mot de passe</h1>

        {{ form_start(requestForm) }}
            <div class="form-group">
                {{ form_row(requestForm.email, {
                    'label': 'Adresse email',
                    'attr': {'class': 'form-control'}
                }) }}
            </div>
            <div class="mb-3">
                <small>
                    Entrez votre adresse email, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                </small>
            </div>
            <button type="submit" class="btn btn-primary btn-block btn-lg">Envoyer l'email de réinitialisation</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
