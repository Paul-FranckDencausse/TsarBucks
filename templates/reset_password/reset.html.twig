{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Réinitialiser votre mot de passe</h1>

        {{ form_start(resetForm) }}
            <div class="form-group">
                {{ form_row(resetForm.plainPassword, {
                    'label': 'Nouveau mot de passe',
                    'attr': {'class': 'form-control'}
                }) }}
            </div>
            <button type="submit" class="btn btn-primary btn-block">Réinitialiser le mot de passe</button>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
