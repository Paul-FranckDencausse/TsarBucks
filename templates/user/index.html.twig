{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Clients</h1>

        <input type="text" id="searchInput" onkeyup="filterTable()" placeholder="Rechercher..." class="form-control mb-3">

        <table class="table table-striped table-bordered" id="userTable">
            <thead class="thead-dark">
                <tr>
                    <th>
                        <a href="{{ path('app_user_index', {'sort': 'id', 'order': order == 'asc' ? 'desc' : 'asc'}) }}">
                            Id
                            {% if sort == 'id' %}
                                {% if order == 'asc' %}
                                    <i class="fas fa-sort-up"></i>
                                {% else %}
                                    <i class="fas fa-sort-down"></i>
                                {% endif %}
                            {% endif %}
                        </a>
                    </th>
                    <th>
                        <a href="{{ path('app_user_index', {'sort': 'email', 'order': order == 'asc' ? 'desc' : 'asc'}) }}">
                            Email
                            {% if sort == 'email' %}
                                {% if order == 'asc' %}
                                    <i class="fas fa-sort-up"></i>
                                {% else %}
                                    <i class="fas fa-sort-down"></i>
                                {% endif %}
                            {% endif %}
                        </a>
                    </th>
                    <th>
                        <a href="{{ path('app_user_index', {'sort': 'nom', 'order': order == 'asc' ? 'desc' : 'asc'}) }}">
                            Nom
                            {% if sort == 'nom' %}
                                {% if order == 'asc' %}
                                    <i class="fas fa-sort-up"></i>
                                {% else %}
                                    <i class="fas fa-sort-down"></i>
                                {% endif %}
                            {% endif %}
                        </a>
                    </th>
                    <th>
                        <a href="{{ path('app_user_index', {'sort': 'prenom', 'order': order == 'asc' ? 'desc' : 'asc'}) }}">
                            Pr√©nom
                            {% if sort == 'prenom' %}
                                {% if order == 'asc' %}
                                    <i class="fas fa-sort-up"></i>
                                {% else %}
                                    <i class="fas fa-sort-down"></i>
                                {% endif %}
                            {% endif %}
                        </a>
                    </th>
                    <th>Media_id</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.prenom }}</td>
                    <td>Media</td>
                    <td>
                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn text-light btn-info btn-lg mb-2">Afficher</a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn text-light btn-warning btn-lg mb-2">Modifier</a>
                        {{ include('user/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">Liste des utilisateurs vide</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_admin_dashboard') }}" class="btn text-light btn-info btn-lg mb-2">Retour au tableau de bord</a>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
    function filterTable() {
    var input, filter, table, tr, td, i, j, txtValue;
    input = document.getElementById("searchInput");
    filter = input.value.toUpperCase();
    table = document.getElementById("userTable");
    tr = table.getElementsByTagName("tr");

    console.log("Filter value:", filter);

    for (i = 1; i < tr.length; i++) {
        tr[i].style.display = "none";
        td = tr[i].getElementsByTagName("td");
        for (j = 0; j < td.length; j++) {
            if (td[j]) {
                txtValue = td[j].textContent || td[j].innerText;
                console.log("Cell value:", txtValue);
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                    break;
                }
            }
        }
    }
}

    </script>
{% endblock %}
