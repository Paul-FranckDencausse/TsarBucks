{% extends 'base.html.twig' %}

{% block title %}Profil de l'utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Profil</h1>

        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.nom }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ user.prenom }}</td>
                </tr>
                <tr>
                    <th>Media_id</th>
                    <td></td>
                </tr>
            </tbody>
        </table>

      <div class="mt-4">
    <h3>Modifier les rôles</h3>
    {{ form_start(form, {'attr': {'class': 'form'}}) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-success mt-3">Mettre à jour</button>
    {{ form_end(form) }}
</div>


        <div class="mt-3">
            <a href="{{ path('app_user_index') }}" class="btn btn-lg btn-primary">Retour</a>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
