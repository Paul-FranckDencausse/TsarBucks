{% extends 'base.html.twig' %}

{% block title %}Changer de mot de passe{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="card-title text-center text-primary mb-4">Changer de mot de passe</h1>
                    <hr>
                    
                    {{ form_start(form, { 'attr': {'class': 'needs-validation'} }) }}
                        <div class="mb-3">
                            {{ form_label(form.currentPassword, 'Mot de passe actuel', { 'label_attr': {'class': 'form-label'} }) }}
                            {{ form_widget(form.currentPassword, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.currentPassword) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.newPassword, 'Nouveau mot de passe', { 'label_attr': {'class': 'form-label'} }) }}
                            {{ form_widget(form.newPassword, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.newPassword) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.confirmPassword, 'Confirmer le nouveau mot de passe', { 'label_attr': {'class': 'form-label'} }) }}
                            {{ form_widget(form.confirmPassword, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.confirmPassword) }}
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100">Modifier le mot de passe</button>
                    {{ form_end(form) }}

                    <a href="{{ path('app_home') }}" class="btn btn-secondary w-100 mt-3">Retour</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
