{% extends 'base.html.twig' %}

{% block title %}Changer de mot de passe{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Changer de mot de passe</h1>

    {{ form_start(form) }}
        {{ form_row(form.currentPassword) }}
        {{ form_row(form.newPassword) }}
        {{ form_row(form.confirmPassword) }}
        
        <button class="btn btn-primary">Modifier le mot de passe</button>
    {{ form_end(form) }}

    <a href="{{ path('app_home') }}" class="btn btn-secondary mt-3">Retour</a>
</div>
{% endblock %}
