{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Inscription</h1>

    <!-- Affichage des erreurs globaux du formulaire -->
    {% if form_errors(form) %}
        <div class="alert alert-danger">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <!-- Début du formulaire -->
    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

    <div class="row g-3">
        <!-- Adresse e-mail -->
        <div class="col-md-6">
            {{ form_row(form.email, {
                label: 'Adresse e-mail',
                attr: {'class': 'form-control'}
            }) }}
        </div>

        <!-- Mot de passe -->
        <div class="col-md-6">
            {{ form_row(form.plainPassword, {
                label: 'Mot de passe',
                attr: {'class': 'form-control'}
            }) }}
        </div>

        <!-- Nom -->
        <div class="col-md-6">
            {{ form_row(form.nom, {
                label: 'Nom',
                attr: {'class': 'form-control'}
            }) }}
        </div>

        <!-- Prénom -->
        <div class="col-md-6">
            {{ form_row(form.prenom, {
                label: 'Prénom',
                attr: {'class': 'form-control'}
            }) }}
        </div>

        <!-- Genre -->
        <div class="col-md-6">
            {{ form_row(form.gender, {
                label: 'Genre',
                attr: {'class': 'form-select'}
            }) }}
        </div>

        <!-- Téléphone -->
        <div class="col-md-6">
            {{ form_row(form.phone, {
                label: 'Téléphone',
                attr: {'class': 'form-control'}
            }) }}
        </div>

    

        <!-- Adresse -->
        <div class="col-md-12">
            {{ form_row(form.address, {
                label: 'Adresse',
                attr: {'class': 'form-control'}
            }) }}
        </div>

        <!-- Code postal -->
        <div class="col-md-6">
            {{ form_row(form.PostalCode, {
                label: 'Code postal',
                attr: {'class': 'form-control'}
            }) }}
        </div>

        <!-- Ville -->
        <div class="col-md-6">
            {{ form_row(form.City, {
                label: 'Ville',
                attr: {'class': 'form-control'}
            }) }}
        </div>

        <!-- Accord parental -->
        <div class="col-md-12">
            <div class="form-check">
                {{ form_row(form.accordParental, {
                    label: 'J\'atteste avoir obtenu l\'accord parental (si mineur)',
                    attr: {'class': 'form-check-input'}
                }) }}
            </div>
        </div>

        <!-- Accepter les termes -->
        <div class="col-md-12">
            <div class="form-check">
                {{ form_row(form.agreeTerms, {
                    label: 'J\'accepte les termes et conditions',
                    attr: {'class': 'form-check-input'}
                }) }}
            </div>
        </div>
    </div>

    <!-- Bouton de soumission -->
    <div class="mt-4">
        <button type="submit" class="btn btn-success">S'inscrire</button>
    </div>
    
    {{ form_end(form) }}
</div>
{% endblock %}
