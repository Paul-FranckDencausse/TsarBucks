{% extends 'base.html.twig' %}

{% block title %}Détails du Salon{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Détails du Salon</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ saloon.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ saloon.name }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ saloon.address }}</td>
            </tr>
            <tr>
                <th>Numéro de téléphone</th>
                <td>{{ saloon.number }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ saloon.email }}</td>
            </tr>
            <tr>
                <th>Horaires d'ouverture</th>
                <td>{{ saloon.openingHours }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3 d-flex justify-content-between">
        <a href="{{ path('app_admin_saloons_index') }}" class="btn btn-lg btn-info">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
        <a href="{{ path('app_admin_saloons_edit', {'id': saloon.id}) }}" class="btn btn-lg btn-warning">
            <i class="bi bi-pencil"></i> Modifier
        </a>
        {{ include('admin_saloons/_delete_form.html.twig', {'attr': {'class': 'd-inline'}}) }}
    </div>
</div>
{% endblock %}
