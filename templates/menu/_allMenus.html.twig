<div>
    {% for category, items in allMenus %}
        <h2 class="mt-5 text-center" style="color: {{ category == 'specialties' ? 'red' : 'black' }};">
            {{ category == 'menus' ? 'Menu Principal' : 'Spécialités' }}
        </h2>
        {% for item in items %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 {{ not item.isAvailable ? 'greyed-out' : '' }}">
                    <img src="{{ asset('uploads/media/' ~ item.imageFilename) }}" class="card-img-top" alt="{{ item.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ item.name }}</h5>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>
