{% extends 'base.html.twig' %}

{% block title %}Détails du Menu du Salon{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Détails du Menu du Salon</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th class="table-dark">ID</th>
                <td>{{ saloon_menu.id }}</td>
            </tr>
            <tr>
                <th class="table-dark">ID du Salon</th>
                <td>{{ saloon_menu.saloonId }}</td>
            </tr>
            <tr>
                <th class="table-dark">ID du Menu</th>
                <td>{{ saloon_menu.menuId }}</td>
            </tr>
            <tr>
                <th class="table-dark">Nom</th>
                <td>{{ saloon_menu.name }}</td>
            </tr>
            <tr>
                <th class="table-dark">Description</th>
                <td>{{ saloon_menu.description }}</td>
            </tr>
            <tr>
                <th class="table-dark">Image</th>
                <td>
                    {% if saloon_menu.imageFilename %}
                        <img src="{{ asset('uploads/media/' ~ saloon_menu.imageFilename) }}" alt="{{ saloon_menu.name }}" class="img-fluid" style="max-width: 150px;">
                    {% else %}
                        <span class="text-muted">Aucune image disponible</span>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th class="table-dark">Type</th>
                <td>{{ saloon_menu.type }}</td>
            </tr>
            <tr>
                <th class="table-dark">ID de la Recette</th>
                <td>{{ saloon_menu.recipeId }}</td>
            </tr>
            <tr>
                <th class="table-dark">Prix (€)</th>
                <td>{{ saloon_menu.price }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_saloon_menu_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <div>
            <a href="{{ path('app_saloon_menu_edit', {'id': saloon_menu.id}) }}" class="btn btn-warning">Modifier</a>
            {{ include('saloon_menu/_delete_form.html.twig', { class: 'd-inline-block' }) }}
        </div>
    </div>
</div>
{% endblock %}
