{% extends 'base.html.twig' %}

{% block title %}Menu des Salons{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Spécialités locales</h1>

    <table class="table table-striped table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Salon</th>
                <th>Menu</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Image</th>
                <th>Type</th>
                <th>Recette</th>
                <th>Prix (€)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for saloon_menu in saloon_menus %}
            <tr>
                <td>{{ saloon_menu.id }}</td>
                <td>{{ saloon_menu.saloonId }}</td>
                <td>{{ saloon_menu.menuId }}</td>
                <td>{{ saloon_menu.name }}</td>
                <td>{{ saloon_menu.description }}</td>
                <td>
                    {% if saloon_menu.imageFilename %}
                        <img src="{{ asset('uploads/media/' ~ saloon_menu.imageFilename) }}" alt="{{ saloon_menu.name }}" class="img-fluid" style="max-width: 80px;">
                    {% else %}
                        <span class="text-muted">Aucune image</span>
                    {% endif %}
                </td>
                <td>{{ saloon_menu.type }}</td>
                <td>{{ saloon_menu.recipeId }}</td>
                <td>{{ saloon_menu.price }}</td>
                <td>
                    <a href="{{ path('app_saloon_menu_show', {'id': saloon_menu.id}) }}" class="btn  btn-info btn-lg text-white">Voir</a>
                    <a href="{{ path('app_saloon_menu_edit', {'id': saloon_menu.id}) }}" class="btn btn-lg btn-warning text-white">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10" class="text-center text-muted">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-end">
        <a href="{{ path('app_saloon_menu_new') }}" class="btn btn-success btn-lg text-white">Créer un nouveau plat</a>
        
    </div>
    <br>
</div>
{% endblock %}
