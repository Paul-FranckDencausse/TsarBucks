{% extends 'base.html.twig' %}

{% block title %}Réservations{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Réservations</h1>

    <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Utilisateur ID</th>
                <td>{{ reservation.userId }}</td>
            </tr>
            <tr>
                <th>Salon ID</th>
                <td>{{ reservation.saloonId ? reservation.saloonId|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ reservation.date ? reservation.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Personnes</th>
                <td>{{ reservation.people }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ reservation.status }}</td>
            </tr>
            <tr>
                <th>Activité ID</th>
                <td>{{ reservation.activityId }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between mt-3">
        <a href="{{ path('app_admin_reservations_index') }}" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>

        <a href="{{ path('app_admin_reservations_edit', {'id': reservation.id}) }}" class="btn btn-warning">
            Modifier
        </a>

        {{ include('admin_reservations/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
