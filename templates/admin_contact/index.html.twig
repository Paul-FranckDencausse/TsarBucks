{% extends 'base.html.twig' %}

{% block title %}Demandes de contact{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Demandes de contact</h1>

    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Sujet</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.subject }}</td>
                <td>{{ contact.message }}</td>
                <td>
                    <a href="{{ path('app_admin_contact_show', {'id': contact.id}) }}" class="btn btn-info btn-lg text-light">Voir</a>
                    <a href="{{ path('app_admin_contact_edit', {'id': contact.id}) }}" class="btn btn-warning btn-lg text-light">Statut</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">La liste est vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<a href="{{ path('app_admin_dashboard')}}" class="btn text-light btn-info btn-lg mb-2">Retour au tableau de bord</a>
    
</div>
{% endblock %}
