{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Contact</h1>

    <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ contact.subject }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between mt-3">
        <a href="{{ path('app_admin_contact_index') }}" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i> Retour Ã  la liste
        </a>

        <a href="{{ path('app_admin_contact_edit', {'id': contact.id}) }}" class="btn btn-warning">
            Modifier
        </a>

        {{ include('admin_contact/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
